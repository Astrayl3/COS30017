<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <!-- Input field for user text -->
    <EditText
        android:id="@+id/editTextInput"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter text here"
        android:textSize="16sp" />

    <!-- Button to save text to Internal Storage -->
    <Button
        android:id="@+id/buttonSaveInternal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Save to Internal Storage" />

    <!-- Button to save text to External Storage -->
    <Button
        android:id="@+id/buttonSaveExternal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Save to External Storage" />

    <!-- Button to read text from Internal Storage -->
    <Button
        android:id="@+id/buttonReadInternal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Read from Internal Storage" />

    <!-- Button to read text from External Storage -->
    <Button
        android:id="@+id/buttonReadExternal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Read from External Storage" />

    <!-- TextView to display file content -->
    <TextView
        android:id="@+id/textViewOutput"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="File Content will appear here"
        android:textSize="16sp" />
</LinearLayout>
